<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @event.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @event.description %>
</p>

<p>
  <strong>Start date:</strong>
  <%= @event.start_date %>
</p>

<p>
  <strong>End date:</strong>
  <%= @event.end_date %>
</p>

<p><strong>Existing Images:</strong></p>
<div style="overflow: hidden;border: 1px solid #CCC;padding: 10px;">
  <% @event.pictures.each do |picture| %>
    <img src="<%= picture.image.url %>" style="float: left; width: 20%;"/>
  <% end %>
</div>

<%= form_for [@event, Picture.new], :html => {id: 'picture-dropzone', class: :dropzone, multipart: true} do |f| %>
  <%= f.hidden_field :image %>
<% end %>


<%= link_to 'Edit', edit_event_path(@event) %> |
<%= link_to 'Back', events_path %>


